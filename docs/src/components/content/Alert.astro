---
export interface Props {
  type: 'warning' | 'danger' | 'success' | 'info';
}
const { type } = Astro.props;

const defaultClass = 'border-l-4 p-4 my-8';

const getClass = (color: string) => {
  switch (color) {
    case 'warning':
      return `${defaultClass} bg-yellow-100  border-yellow-500 text-yellow-700 `;
    case 'danger':
      return `${defaultClass} bg-red-100  border-red-500 text-red-700 `;
    case 'success':
      return `${defaultClass} bg-green-100  border-green-500 text-green-700 `;
    case 'info':
      return `${defaultClass} bg-blue-100  border-blue-500 text-blue-700 `;
    default:
      return `${defaultClass} bg-blue-100  border-blue-500 text-blue-700 `;
  }
};
---

<div class={getClass(type)}>
  <slot />
</div>

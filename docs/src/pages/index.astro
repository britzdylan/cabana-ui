---
import { SITE } from '../../config';
import '../styles/base.css';

const navItems = [
  {
    title: 'Getting Started',
    description: 'Get up and running with Cabana.',
    url: '/getting-started/install',
    img: '/Core.jpg',
  },
  {
    title: 'Utilities',
    description: 'The expanded Tailwindcss utilities.',
    url: '/core/colors',
    img: '/Core.jpg',
  },
  // {
  //   title: 'Patterns',
  //   description: 'Common patterns for building interfaces.',
  //   url: '/patterns/introduction',
  //   img: '/Patterns.jpg',
  // },
];
---

<div class='bg-zinc-100 min-h-screen text-center'>
  <header
    class='pt-12 pb-24 px-4 bg-gradient-to-t from-secondary-800 to-secondary-900'
  >
    <div class='flex items-center justify-center p-4'>
      <img src='/logo.svg' alt='Astro Design System Logo' />
    </div>
    <h1 class='text-white text-4xl font-medium drop-shadow-sm'>{SITE.title}</h1>
    <p class='text-lg mt-4 max-w-xl mx-auto text-zinc-300'>
      {SITE.description}
    </p>
  </header>
  <nav>
    <ul class='flex gap-4 max-w-5xl mx-auto text-left mt-12'>
      {
        navItems.map(({ title, description, url, img }) => (
          <a
            href={url}
            class='flex flex-col bg-white rounded-md hover:-translate-y-1 hover:shadow-lg transition-all flex-1 items-center p-4'>
            <img src={img} alt={title} />
            <h2 class='text-lg font-medium'>{title}</h2>
            <p class='text-zinc-500'>{description}</p>
          </a>
        ))
      }
    </ul>
  </nav>
</div>

<script is:inline></script>
